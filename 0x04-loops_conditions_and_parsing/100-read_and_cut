#!/usr/bin/env bash
#Prompt for the username
read -p "Enter a username: " username

# Use the 'id' command to get user information
user_info=$(id "$username" 2>/dev/null)

# Check if the user exists
if [ $? -eq 0 ]; then
    # Extract and display the username, user ID, and home directory
    echo "Username: $username"
    user_id=$(echo "$user_info" | grep -oP "(?<=uid=)\d+")
    echo "User ID: $user_id"
    home_dir=$(echo "$user_info" | grep -oP "(?<=home=)[^\s:]+")
    echo "Home Directory: $home_dir"
else
    echo "User '$username' does not exist."
fi
